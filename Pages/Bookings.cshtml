@page
@model BookingsModel
@{
    ViewData["Title"] = "Bookings";
}

<h2>Bookings</h2>
<style>
    /* Style the tab */
    .tab {
        overflow: hidden;
        border: 1px solid #ccc;
        background-color: #f1f1f1;
    }

        /* Style the buttons inside the tab */
        .tab button {
            background-color: inherit;
            float: left;
            border: none;
            outline: none;
            cursor: pointer;
            padding: 14px 16px;
            transition: 0.3s;
            font-size: 17px;
        }

            /* Change background color of buttons on hover */
            .tab button:hover {
                background-color: #ddd;
            }

            /* Create an active/current tablink class */
            .tab button.active {
                background-color: #ccc;
            }

    /* Style the tab content */
    .tabcontent {
        display: none;
        padding: 6px 12px;
        border: 1px solid #ccc;
        border-top: none;
    }
</style>
<div class="tab">
    <button class="tablinks" onclick="openTab(event, 'Hotels')" id="@Model.Input.HotelActiveTab">Hotels</button>
    <button class="tablinks" onclick="openTab(event, 'Tours')" id="@Model.Input.TourActiveTab">Tours</button>
    <button class="tablinks" onclick="openTab(event, 'Packages')" id="@Model.Input.PackageActiveTab">Packages</button>
</div>
<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
<form id="hotelSearchForm" method="post">
    @* <input type="hidden" name="activeTab" id="activeTab" value="@Model.Input.HotelActiveTab"/> *@
    <div id="Hotels" class="tabcontent">
        <h3>Search Hotels</h3>
        <hr />
        <div class="form-group">
            <label asp-for="Input.CheckInDate">Select check-in date:</label>
            <input asp-for="Input.CheckInDate" type="date" class="form-control" />
            <span asp-validation-for="Input.CheckInDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.CheckInDate">Select check-out date:</label>
            <input asp-for="Input.CheckOutDate" type="date" class="form-control" />
            <span asp-validation-for="Input.CheckOutDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.RoomType">Select room type:</label>
            <select asp-for="Input.RoomType" asp-items="@Model.Input.RoomTypes" class="form-control"></select>
            <span asp-validation-for="Input.RoomType" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="hotels">Hotels:</label>
            <select id="hotels">
                @foreach (var hotel in Model.Input.AvailableHotels)
                {
                    <option value="@hotel">@hotel</option>
                }
            </select>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </div>
</form>
<div id="Tours" class="tabcontent">
    <h3>Search Tours</h3>
    <hr />
    <div class="form-group">
        <label for="tour-start-date">Select Tour Start Date:</label>
        <input type="date" id="tour-start-date" />
    </div>
    <div class="form-group">
        <label for="tour-end-date">Select Tour End Date:</label>
        <input type="date" id="tour-end-date" />
    </div>
    <div class="form-group">
        <label for="tour-location">Select Tour Location:</label>
        <select id="tour-location">
        </select>
    </div>
    <div class="form-group">
        <label for="tours">Tours:</label>
        <select id="tours">
        </select>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Book</button>
    </div>
</div>
<div id="Packages" class="tabcontent">
    <h3>Packages</h3>
    <p>Packages and any relevant discounts will be displayed here based on your selected hotel and tour.</p>
</div>
<script>
    function openTab(evt, tabName) {
        var i, tabcontent, tablinks;
        tabcontent = document.getElementsByClassName("tabcontent");
        for (i = 0; i < tabcontent.length; i++) {
            tabcontent[i].style.display = "none";
        }
        tablinks = document.getElementsByClassName("tablinks");
        for (i = 0; i < tablinks.length; i++) {
            tablinks[i].className = tablinks[i].className.replace(" active", "");
        }
        document.getElementById(tabName).style.display = "block";
        evt.currentTarget.className += " active";
    }

    if (document.getElementById("HotelsTabSelected") != null) {
        document.getElementById("HotelsTabSelected").click();
    }

    if (document.getElementById("ToursTabSelected") != null) {
        document.getElementById("Tours").click();
    }

    if (document.getElementById("PackageTabSelected") != null) {
        document.getElementById("Package").click();
    }

</script>
