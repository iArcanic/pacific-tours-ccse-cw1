@page
@model ViewBookingsModel
@{
    ViewData["Title"] = "ViewBookings";
}

<h2>Your bookings</h2>
<p>Any bookings you have made will be displayed here</p>
<hr />
<form id="hotelTableForm" method="post" asp-page-handler="HotelTable">
    <h3>Hotels</h3>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Room Type</th>
                            <th>Check-in Date</th>
                            <th>Check-out Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        <input type="hidden" id="hotelBookingIdInput" name="hotelBookingId" value="">
                        @for (var i = 0; i < Model.ViewBookingsTable.HotelBookingsList.Count; i++)
                        {
                            var item = Model.ViewBookingsTable.HotelBookingsList[i];
                            <tr>
                                <td>@item.Hotel.Name</td>
                                <td>@item.Hotel.RoomType</td>
                                <td id="checkInDateCell@(i)">@item.CheckInDate.ToShortDateString()</td>
                                <td id="checkOutDateCell@(i)">@item.CheckOutDate.ToShortDateString()</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <input id="hotelEditButtonId@(i)" type="button" name="command" onclick="toggleEditSave(['checkOutDateCell@(i)', 'checkInDateCell@(i)'], 'hotelEditButtonId@(i)')" class="btn btn-primary" value="Edit"/>
                                    </div>
                                    <div class="btn-group" role="group">
                                        <input type="submit" class="btn btn-danger" name="command" value="Cancel" onclick="onCancelClick('hotelBookingIdInput', 'hotelTableForm', '@item.HotelBookingId')" />
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</form>
<hr />
